<h1>ブログ一覧</h1>
<p><%= notice %></p>
<table>
  <tr>
    <th>名前</th>
    <th>email</th>
    <th>内容</th>
  </tr>

<% @contacts.each do |contact| %>
  <tr>
    <td><%= contact.name %></td>
    <td><%= contact.email %></td>
    <td><%= contact.content %></td>
    
    <td><%= link_to '詳細を確認する', contact_path(contact.id) %></td>
    <td><%= link_to "ブログを編集する", edit_contact_path(contact.id), data: { confirm: '本当に編集していいですか？' }%></td>
    <td><%= link_to 'ブログを削除する', contact_path(contact.id), method: :delete ,data: { confirm: '本当に削除していいですか？' }%></td>
  </tr>
<% end %>
</table>

<%= link_to 'ブログ一覧画面にもどる', contacts_path %>
<%= link_to '新しくブログを投稿する', new_contact_path %>